  "compilerOptions": {
    "declaration": true,
    "useDefineForClassFields": true,
    "esModuleInterop": false,
    "outDir": "./dist",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": [
     "node_modules",
     "**/node_modules/*",
  ]
}
